{
  "name": "turborepo",
  "version": "1.0.0",
  "description": "Turborepo POC - Work Orders Management System",
  "main": "index.js",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dev:client": "turbo run dev --filter=webapp-client --filter=api-auth --filter=api-orders",
    "dev:admin": "turbo run dev --filter=webapp-admin --filter=api-auth --filter=api-orders",
    "dev:backend": "turbo run dev --filter=api-auth --filter=api-orders --filter=api-analytics",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.22.0",
  "devDependencies": {
    "prettier": "^3.8.1",
    "turbo": "^2.8.1",
    "typescript": "^5.9.3"
  }
}
